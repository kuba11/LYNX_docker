

server {
    listen [::]:443 ssl ipv6only=on;
    listen 443 ssl;
    server_name localhost;
	
	# certs go here
	ssl_certificate /etc/nginx/certs/localhost.pem;
	ssl_certificate_key /etc/nginx/certs/localhost-key.pem;

    root /var/www/lynx-dev;
    index index.html;

    location = /www/favicon.ico {
        alias /var/www/html/favicon.ico;
    }

location /IGV/ {
    # strip the /IGV prefix and prepend /api/IGV/
    proxy_pass http://localhost:9000/api/IGV/;
    
    proxy_set_header Host              $host;
    proxy_set_header X-Real-IP         $remote_addr;
    proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
}


    # Serve static assets first
    location /static/ {
        try_files $uri =404;
    }

    # Proxy API requests
    location /api/ {
        proxy_pass http://localhost:9000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }


    # Main frontend app + client-side routing
    location / {
        try_files $uri /index.html;
    }

    # Custom 404 page

    error_page 404 /index.html;

    add_header X-Frame-Options SAMEORIGIN always;
    add_header X-Content-Type-Options nosniff always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Content-Security-Policy "default-src 'self'; connect-src 'self' localhost https://igv.org https://raw.githubusercontent.com  https://hgdownload.soe.ucsc.edu; script-src 'self'; style-src 'self' 'unsafe-inline'; object-src 'none'; frame-ancestors 'self'; base-uri 'self'; form-action 'self'; font-src 'self';  img-src 'self'  data:; " always;


}

server {
    if ($host = localhost) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    listen [::]:80;
    server_name localhost;

    return 301 https://$host$request_uri;


}
